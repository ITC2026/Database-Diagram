Table Clients {
  client_id int [pk]
  client_name varchar
  client_desc varchar
  exclusivity varchar
  high_growth bool
  division varchar
  contract_pdf varchar
  logo varchar
}

Table Projects {
  project_id int [pk]
  project_title varchar
  project_desc varchar
  publication_date date
  expiration_date date
  general_status enum //refers to know if the project is either: 1-In Preparation, 2-Active, 3-Closed
  account_manager int // FK
  client_id int // FK
}

Table InPreparationProject {
  in_preparation_project_id int [pk]
  percentage_coverage int
  project_id int // FK
}

Table ActiveProject {
  active_project_id int [pk]
  bill_rate int
  project_id int // FK
}

Table ClosedProject {
  closed_project_id int [pk]
  reason varchar
  closed_status bool
  project_id int // FK
}

Table Positions {
  position_id int [pk]
  position_title varchar
  position_desc varchar
  publication_type varchar
  cross_division bool
  division varchar
  region varchar
  tech_stack varchar
  demand_curation varchar
  exclusivity bool
  project_id int // FK
}

Table Vacancies {
  vacancy_id int [pk]
  status varchar
  reason varchar
  start_date date
  end_date date
  position_id int // FK
  person_id int // FK
}

Table Applications {
  application_id int [pk]
  status varchar
  position_id int // FK
  person_id int // FK
}

Table People {
  person_id int [pk]
  region varchar
  division varchar
  general_status enum //refers to know if the person is either: 1-pipeline, 2-bench, 3-billing
  job_title varchar
  job_grade varchar
  tech_stack varchar
  registration_date date
  phone varchar
  email varchar
}

Table Pipeline {
  pipeline_id int [pk]
  expected_salary float
  in_pipeline_since date
  days_in_pipeline int
  is_rejected bool
  person_id int // FK
}

Table Employees { 
  employee_id int [pk]
  salary float
  hired_date date
  reason varchar //refers to that the employee is fired or moved, or not yet on project "awaiting client confirmation"
  proposed_action varchar
  contract_start_date date 
  work_hours int 
  is_fired bool
  last_client_id  int //last client or CLIENTSSS need revision
  current_client_id int 
  person_id int // FK
}

Table Bench {
  bench_id int [pk]
  benched_since date
  days_on_bench int
  searching_job bool
  employee_id int
}

Table Billing {
  billing_id int [pk]
  billing_since date
  days_billing int
  employee_id int
}

Table Users {
  user_id int [pk]
  username varchar
  password varchar
  email varchar
  role varchar
}

Ref: "Projects"."client_id" > "Clients"."client_id"
Ref: "Employees"."current_client_id" > "Clients"."client_id"
Ref: "Employees"."last_client_id" > "Clients"."client_id"

Ref: "Positions"."project_id" > "Projects"."project_id"
Ref: "InPreparationProject"."project_id" - "Projects"."project_id"
Ref: "ActiveProject"."project_id" - "Projects"."project_id"
Ref: "ClosedProject"."project_id" - "Projects"."project_id"

Ref: "Positions"."position_id" < "Applications"."position_id"
Ref: "Positions"."position_id" < "Vacancies"."position_id"
Ref: "Applications"."person_id" - "People"."person_id"
Ref: "Vacancies"."person_id" - "People"."person_id" 

Ref: "People"."person_id" - "Pipeline"."person_id"
Ref: "People"."person_id" - "Employees"."person_id"
Ref: "Employees"."employee_id" - "Bench"."employee_id"
Ref: "Employees"."employee_id" - "Billing"."employee_id"

// Only if is an account manager
Ref: "Users"."user_id" > "Projects"."account_manager"